<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/hoten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Ho ten: "
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/input_hoten"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/hoten"
        />


    <TextView
        android:id="@+id/CMT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="CMTND: "
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/hoten"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/input_CMT"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/input_hoten"
        app:layout_constraintLeft_toRightOf="@+id/CMT"
        />


    <TextView
        android:id="@+id/sothich2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="So thich: "
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/CMT"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/input_sothich2"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/input_CMT"
        app:layout_constraintLeft_toRightOf="@+id/sothich2"
        />

    <TextView
        android:id="@+id/bangcap2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="So thich: "
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/sothich2"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/input_bangcap2"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/input_sothich2"
        app:layout_constraintLeft_toRightOf="@+id/bangcap2"
        />

    <TextView
        android:id="@+id/ttbs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="So thich: "
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/sothich2"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/input_ttbs2"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/input_sothich2"
        app:layout_constraintLeft_toRightOf="@+id/ttbs2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>