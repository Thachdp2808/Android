<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/menu"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <CheckBox
        android:id="@+id/coffe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="COFFE (20 000)"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        app:layout_constraintLeft_toLeftOf="parent"
/>
    <EditText
        android:id="@+id/input_coffe"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/coffe"
        app:layout_constraintTop_toBottomOf="@id/menu"/>

    <CheckBox
        android:id="@+id/kem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Kem tươi (10 000)"
        app:layout_constraintTop_toBottomOf="@+id/coffe"
        app:layout_constraintLeft_toLeftOf="parent"
/>
    <EditText
        android:id="@+id/input_kem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/kem"
        app:layout_constraintTop_toBottomOf="@id/input_coffe"/>

    <CheckBox
        android:id="@+id/bim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Bim Bim (5 000)"
        app:layout_constraintTop_toBottomOf="@+id/kem"
        app:layout_constraintLeft_toLeftOf="parent" />
    <EditText
        android:id="@+id/input_bim"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/bim"
        app:layout_constraintTop_toBottomOf="@id/input_kem"/>

    <CheckBox
        android:id="@+id/suachua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Sữa chua (6 000)"

        app:layout_constraintTop_toBottomOf="@+id/bim"
        app:layout_constraintLeft_toLeftOf="parent"
/>
    <EditText
        android:id="@+id/input_suachua"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/suachua"
        app:layout_constraintTop_toBottomOf="@id/bim"/>

    <CheckBox
        android:id="@+id/nepcam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Sữa chua nếp cẩm (12 000)"
        app:layout_constraintTop_toBottomOf="@+id/suachua"
        app:layout_constraintLeft_toLeftOf="parent"
/>
    <EditText
        android:id="@+id/input_nepcam"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/nepcam"
        app:layout_constraintTop_toBottomOf="@id/suachua"/>
    <Button
        android:id="@+id/cal"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:text="Đặt hàng"
        app:layout_constraintTop_toBottomOf="@+id/nepcam"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tongtien"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:textSize="20dp"
        android:text="Tổng tiền"
        app:layout_constraintTop_toBottomOf="@+id/cal"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/sum"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cal"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@id/soluong"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:textSize="20dp"
        android:text="Số Lượng"
        app:layout_constraintTop_toBottomOf="@+id/cal"
        app:layout_constraintLeft_toRightOf="@id/tongtien"/>
    <TextView
        android:id="@+id/sum_soluong"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"

        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/soluong"
        app:layout_constraintLeft_toRightOf="@+id/sum"/>








</androidx.constraintlayout.widget.ConstraintLayout>